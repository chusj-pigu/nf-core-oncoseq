process {
    executor = 'slurm'
    array = 96
    errorStrategy = { task.exitStatus in ((130..145) + 104) ? 'retry' : 'finish' }
}

executor {
    name            = "slurm"
    pollInterval    = '60 sec'
    submitRateLimit = '60/1min'
    queueSize       = 100
    jobName         = {
        task.name
            .replace("[", "(")
            .replace("]", ")")
            .replace(" ", "_")
    }
}

params {
        max_memory='249G'
        max_cpus=64
        max_time='168h'
        publish_dir_mode = 'link'
}
apptainer {
        enabled=true
        autoMounts=true
        runOptions = "-B /project/ctb-noncodo/Platform/references"
        libraryDir = "$HOME/scratch/apptainer_cache/"
        cacheDir = "$HOME/scratch/apptainer_cache/"
}
