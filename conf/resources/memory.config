process {
    // Memory Definitions
    withLabel:process_low_memory {
        memory = { check_max( 3.GB * task.attempt, 'memory' ) }
    }
    withLabel:process_medium_low_memory {
        memory = { check_max( 10.GB * task.attempt, 'memory' ) }
    }
    withLabel:process_medium_memory {
        memory = { check_max( 40.GB * task.attempt, 'memory' ) }
    }
    withLabel:process_medium_mid_memory {
        memory = { check_max( 20.GB * task.attempt, 'memory' ) }
    }
    withLabel:process_medium_memory {
        memory = { check_max( 40.GB * task.attempt, 'memory' ) }
    }
    withLabel:process_medium_high_memory {
        memory = { check_max( 60.GB * task.attempt, 'memory' ) }
    }
    withLabel:process_higher_memory {
        memory = { check_max( 80.GB * task.attempt, 'memory' ) }        // Has to be higher rather than high because of the already existing nf-core high_memory label
    }
}
