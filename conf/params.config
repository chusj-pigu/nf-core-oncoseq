// -----------------------------------------------------------------------------
// nf-core/oncoseq: Global default pipeline parameters
// -----------------------------------------------------------------------------
params {
    // -------------------------------------------------------------------------
    // Input and sample sheet options
    // -------------------------------------------------------------------------
    input                = null   // Main input samplesheet (CSV)
    ubam_samplesheet     = null   // Samplesheet for uBAM input
    demux                = null   // Barcoding kit name
    demux_samplesheet    = null   // Samplesheet for demultiplexing
    skip_basecalling     = false  // Skip basecalling and use FASTQ input
    adaptive             = false   // Enable adaptive sampling mode
    bed                  = "${projectDir}/test_data/adaptive/2025-02-05-CHUSJ-Panel-20kb-LP.bed" // BED file for adaptive mode
    adaptive_samplesheet = null   // Samplesheet for adaptive mode
    low_fidelity         = "${projectDir}/assets/NOLIST" // List of low fidelity genes
    padding              = null   // Padding around regions of interest
    cfdna                = false  // Enable cell-free DNA mode
    time_series          = false  // Enable time series analysis
    time_points          = null   // Time points for time series analysis
    include_full         = false  // Include full time in analysis

    // -------------------------------------------------------------------------
    // Basecalling and mapping options
    // -------------------------------------------------------------------------
    minqs                = 10     // Minimum phred score for filtering
    model                = null   // Basecalling model (Dorado)
    model_path           = null   // Path to local basecalling model
    m_bases_path         = null   // Path to modifications model
    m_bases              = null   // Modifications model name
    device               = null   // Device for basecalling
    batch                = null   // Batch size for basecalling
    mapping_small        = true   // Use small genome mapping mode

    // -------------------------------------------------------------------------
    // Variant calling and reference options
    // -------------------------------------------------------------------------
    clairsto_model       = 'ont_r10_dorado_sup_5khz_ssrs' // ClairS_TO model
    chr_list             = 'chr1,chr2,chr3,chr4,chr5,chr6,chr7,chr8,chr9,chr10,chr11,chr12,chr13,chr14,chr15,chr16,chr17,chr18,chr19,chr20,chr21,chr22,chrX,chrY' // Chromosomes for SNP analysis
    clin_database        = "ClinVar" // Clinical database for annotation

    // -------------------------------------------------------------------------
    // CNV calling options
    // -------------------------------------------------------------------------
    qdnaseq_binsize      = 500    // QDNAseq bin size for CNV calling

    // -------------------------------------------------------------------------
    // MultiQC and reporting options
    // -------------------------------------------------------------------------
    multiqc_config             = null   // Custom MultiQC config file
    multiqc_title              = null   // MultiQC report title
    multiqc_logo               = null   // MultiQC logo file
    max_multiqc_email_size     = '25.MB'// Max MultiQC report size for email
    multiqc_methods_description = null  // MultiQC methods description YAML

    // -------------------------------------------------------------------------
    // Resource and output options
    // -------------------------------------------------------------------------
    max_memory           = '16G'  // Max memory per process
    max_cpus             = 4      // Max CPUs per process
    max_time             = '4h'   // Max time per process
    outdir               = null   // Output directory
    publish_dir_mode     = 'copy' // Output file publishing mode
    igenomes_base        = 's3://ngi-igenomes/igenomes/' // iGenomes base path

    // -------------------------------------------------------------------------
    // Notification and logging options
    // -------------------------------------------------------------------------
    email                = null   // Email for completion summary
    email_on_fail        = null   // Email for failure notification
    plaintext_email      = false  // Send plain-text email
    monochrome_logs      = false  // Disable colored logs
    hook_url             = null   // Hook URL for notifications

    // -------------------------------------------------------------------------
    // Help, version, and profile options
    // -------------------------------------------------------------------------
    help                 = false  // Show help message
    help_full            = false  // Show full help
    show_hidden          = false  // Show hidden params
    version              = false  // Show version and exit
    pipelines_testdata_base_path = "${projectDir}/test_data/" // Test data base path
    trace_report_suffix  = new java.util.Date().format('yyyy-MM-dd_HH-mm-ss') // Trace report suffix

    // -------------------------------------------------------------------------
    // nf-core profile and schema validation options
    // -------------------------------------------------------------------------
    config_profile_name        = null     // Profile name
    config_profile_description = null     // Profile description
    custom_config_version      = 'master' // Custom config version
    custom_config_base         = "https://raw.githubusercontent.com/nf-core/configs/${params.custom_config_version}" // Custom config base URL
    config_profile_contact     = null     // Profile contact
    config_profile_url         = null     // Profile URL
    validate_params            = true     // Validate params against schema
}
// -----------------------------------------------------------------------------
