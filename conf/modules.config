/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Config file for defining DSL2 per module options and publishing paths
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
    Available keys to override module options:
        ext.args   = Additional arguments appended to command in module.
        ext.args2  = Second set of arguments appended to command in module (multi-tool modules).
        ext.args3  = Third set of arguments appended to command in module (multi-tool modules).
        ext.prefix = File name prefix for output files.
----------------------------------------------------------------------------------------
*/

process {
    withName: 'DORADO_BASECALL' {
        ext.args = "-vv"
    }

    withName: 'MOSDEPTH_ADAPTIVE' {
        publishDir = [
            path: { "${params.outdir}/reports/mosdepth" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
        ext.args = "-n"
    }

    withName: 'MOSDEPTH_GENERAL' {
        publishDir = [
            path: { "${params.outdir}/reports/mosdepth" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
        ext.args = "-n"
    }

    withName: 'QUARTO_REPORT' {
        publishDir = [
            path: { "${params.outdir}/reports" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

    withName: 'SAMTOOLS_TOFASTQ' {
        publishDir = [
            path: { "${params.outdir}/reads" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
        ext.args = "-T '*'"
    }

    withName: 'SAMTOOLS_SORT_INDEX' {
        publishDir = [
            path: { "${params.outdir}/alignments" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

    withName: 'MINIMAP2_ALIGN' {
        ext.args = "-y -ax map-ont"
    }

    withName: 'SEQKIT_STATS' {
        publishDir = [
            path: { "${params.outdir}/reports/seqkit" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

    withName: 'CLAIRS_TO_CALL' {
        ext.args = "--chunk_size 500000"
    }

    withName: 'SAMTOOLS_SEPARATE_BED' {
        ext.args = "-b -x MM,ML"
    }

    withName: 'CRAMINO_STATS' {
        publishDir = [
            path: { "${params.outdir}/reports/cramino" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

    withName: 'COVERAGE_PLOT' {
        publishDir = [
            path: { "${params.outdir}/reports/" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

    withName: 'WHATSHAP_PHASE' {
        publishDir = [
            path: { "${params.outdir}/variants/" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

    withName: 'WHATSHAP_HAPLOTAG' {
        publishDir = [
            path: { "${params.outdir}/phasing/" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
        ext.args = '--skip-missing-contigs'
    }

    withName: 'WHATSHAP_STATS' {
        publishDir = [
            path: { "${params.outdir}/phasing/" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
    }

    withName: 'SNIFFLES_CALL' {
        publishDir = [
            path: { "${params.outdir}/variants/" },
            mode: params.publish_dir_mode,
            saveAs: { filename -> filename.equals('versions.yml') ? null : filename }
        ]
        ext.args = '--phase'
    }

}
