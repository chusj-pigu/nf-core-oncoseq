/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
Nextflow config file for MPGI local equipment
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/

process {
    resourceLimits = [
        cpus: 4,
        memory: '15.GB',
        time: '1.h'
    ]
    maxForks = 3
}

params {
    publish_dir_mode           = 'link'
    max_memory                 = '100G'
    max_cpus                   = 32
    max_time                   = '168h'
}

apptainer {
    enabled=true
    autoMounts=true
    runOptions = '--writable-tmpfs'
    cacheDir =  "/data/Platform/simages/"
}
