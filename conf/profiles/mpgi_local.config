/*
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
Nextflow config file for MPGI local equipment
~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~~
*/

params {
    publish_dir_mode           = 'link'
    max_memory                 = '100G'
    max_cpus                   = 32
    max_time                   = '168h'
    maxForks                   = 5
}

singularity {
    enabled     = true
    cacheDir    = "/home/$USER/nextflow_software_cache/singularity"
    // the default is 20 minutes and fails with large images
    pullTimeout = "3 hours"
}
